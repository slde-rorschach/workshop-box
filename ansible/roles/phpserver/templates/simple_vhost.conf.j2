# This file is managed by Puppet
<VirtualHost *:80>
    ServerName {{ hostname }}
    ServerAlias www.{{ hostname }}
    DocumentRoot {{ document_root }}

    <Directory {{ document_root }}>
        Options Indexes FollowSymLinks MultiViews
        AllowOverride All
        Order allow,deny
        Allow from all
        Require all granted
    </Directory>
</VirtualHost>
